/* Nacht Theme - Optimierte Blau-Töne, pferde-freundlich, OHNE störende Rahmen */
QWidget {
    background-color: #3a5a7a;
    color: #ffffff;
}

/* Header-Bereiche - NUR für echte Header */
QLabel[objectName*="header"], QLabel[objectName*="lbl_header"] {
    background-color: #3a5a7a;
    color: #ffffff;
    padding: 10px;
}

/* Buttons - Nur Background, keine Effekte */
QPushButton {
    background-color: #6fa8dc;
    color: #ffffff;
    padding: 10px;
    border: none;
}

/* Input-Felder - Minimale Rahmen */
QLineEdit, QComboBox {
    background-color: #6fa8dc;
    border: 1px solid #6fa8dc;
    padding: 8px;
    color: #ffffff;
}

QComboBox:drop-down {
    border: none;
}

QComboBox QAbstractItemView {
    background-color: #6fa8dc;
    color: #ffffff;
    selection-background-color: #3a5a7a;
    border: 1px solid #6fa8dc;
}

/* Slider - Sauber ohne Rahmen */
QSlider::groove:horizontal {
    background-color: #6fa8dc;
    height: 8px;
}

QSlider::handle:horizontal {
    background-color: #6fa8dc;
    width: 20px;
    height: 20px;
    margin: -6px 0;
}

QSlider::sub-page:horizontal {
    background-color: #ffffff;
}

/* Tabellen - Nur bei Bedarf */
QTableWidget {
    background-color: #6fa8dc;
    gridline-color: #6fa8dc;
    border: 1px solid #6fa8dc;
    color: #ffffff;
}

QTableWidget::item {
    padding: 8px;
    border-bottom: 1px solid #333;
}

QTableWidget::item:selected {
    background-color: #3a5a7a;
    color: white;
}

/* Frames - NUR minimal für Vorschau-Bereiche */
QFrame[objectName*="vorschau"] {
    border: 1px solid #6fa8dc;
    background-color: #3a5a7a;
}

/* Alle anderen Frames OHNE Rahmen */
QFrame {
    background-color: #3a5a7a;
    border: none;
}

/* CheckBoxes - Sauber */
QCheckBox {
    color: #ffffff;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 1px solid #6fa8dc;
    background-color: #6fa8dc;
}

QCheckBox::indicator:checked {
    background-color: #3a5a7a;
}

/* FÜTTERUNGSSEITE - Spezielle Elemente */
QLabel#b_heu_fuetterung {
    background-color: #3a5a7a !important;  /* Nacht-Theme Background-Farbe */
    color: #ffffff !important;
}

/* Spezielle Buttons auf Fütterungsseite - BLAU HINTERGRUND */
QPushButton#btn_h_extra {
    background-color: #6fa8dc !important;  /* BLAU wie normale Buttons */
    color: #ffffff !important;  /* Weißer Text auf blauem Grund */
    border: none !important;
    font-weight: bold !important;
}

QPushButton#btn_h_reload {
    background-color: #6fa8dc !important;  /* BLAU wie normale Buttons */
    color: #ffffff !important;  /* Weißer Text auf blauem Grund */
    border: none !important;
}

QPushButton#btn_next_rgv {
    background-color: #6fa8dc !important;  /* BLAU wie normale Buttons */
    color: #ffffff !important;  /* Weißer Text auf blauem Grund */
    border: none !important;
}

QLabel[objectName*="text"], QLabel[objectName^="txt_"] {
    color: #ffffff;
}

QLabel[objectName*="zahl"], QLabel[objectName*="gewicht"], QLabel[objectName*="kg"] {
    color: #ffffff;
}

/* Nährwert-Labels auf Füttern-Seite - WEIß */
QLabel[objectName^="label_h_"] {
    color: #ffffff !important;
}

/* Scrollbars - Dezent */
QScrollBar:vertical {
    background-color: #6fa8dc;
    width: 16px;
}

QScrollBar::handle:vertical {
    background-color: #3a5a7a;
}

QScrollBar::handle:vertical:hover {
    background-color: #ffffff;
}

/* Spezielle Gewichts-Labels für bessere Lesbarkeit */
QLabel[objectName*="gewicht"] {
    color: #ffffff;
}

/* Status-Bereiche - Nur bei expliziten Status-Labels */
QLabel[objectName*="status"] {
    background-color: #6fa8dc;
    color: #ffffff;
    padding: 5px;
}